<div class="jumbotron">
	<h1>Create New Trip</h1>
</div>

<%= form_for @trips do |form| %>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city_id %>
    <%= form.collection_select :city_id, City.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :begin_date %>
    <%= form.text_field :begin_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.text_field :end_date, class: "form-control" %>
  </div>

  <%= form.button 'Create New Trip', class: "btn btn-success" %>
<% end %>      